{
    "root": true,
    "extends": "airbnb",
    "plugins": ["react", "jsx-a11y", "import"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jquery": true,
        "mocha": true
    },
    "rules": {
        "class-methods-use-this": 0,
        "comma-dangle": 0,
        "consistent-return": 0,
        "curly": ["error", "multi-line"],
        "import/extensions": 0,
        "import/no-unresolved": [2, { "commonjs": true }],
        "import/prefer-default-export": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "max-len": [1, 80, 2, { "ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true }],
        "new-cap": 0,
        "no-param-reassign": 0,
        "no-tabs": 0,
        "no-shadow": ["error", { "allow": ["done", "req", "res", "err"] }],
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "react/jsx-filename-extension": 0,
        "require-jsdoc": [
            "error",
            {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true
            }
            }
        ],
        "valid-jsdoc": [
            "error",
            {
            "requireReturn": true,
            "requireParamDescription": false,
            "requireReturnDescription": true
            }
        ]
    },
    "parser": "babel-eslint"
  }
